
@model Mvc_systemtest.Models.ProductViewModel

@{
    ViewBag.Title = "Upload Product";
}

<h2>Upload Product</h2>

@using (Html.BeginForm("UploadProduct", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.ProductName)
        @Html.TextBoxFor(model => model.ProductName, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ProductName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProductDescription)
        @Html.TextAreaFor(model => model.ProductDescription, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ProductDescription)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Price)
        @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Price)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ImagePath)
        @Html.TextBoxFor(model => model.ImagePath, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ImagePath)
    </div>

    <button type="submit" class="btn btn-primary">Upload Product</button>
}
